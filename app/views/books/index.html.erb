<h1>Books</h1>
<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </table>
     
<% @books.each do |book| %>
<%= book.title %>
<%= book.body %>
<% end %>
    
<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
